@{
    Layout = "_Layout";
}

<script type="module" src="~/js/cart.js"></script>


<div class="home">
    <video autoplay loop muted id="video-bg">
        <source src="~/videos/background.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="content">
        <div class="welcome-message">
            <h1>Welcome to BatterLife</h1>
            <p>Where taste meets creativity.</p>
            <a href="~/Products/Index" class="order-button">Explore Now</a>
        </div>
    </div>
</div>

<div class="cart-sidebar" id="cart-sidebar">
    <button class="close-cart-button" id="close-cart">Close</button>
    <h1>Your Cart</h1>

    <div class="cart-items">
    </div>

    <div class="cart-summary">
        <h2>Order Summary</h2>
        <p>Subtotal: <span id="subtotal">$0.00</span></p>
        <button class="checkout-button">Proceed to Checkout</button>
        <button class="continue-shopping-button">Continue Shopping</button>
    </div>
</div>

<footer class="home-footer">
    <p>&copy; 2025 BatterLife. All rights reserved.</p>
</footer>
