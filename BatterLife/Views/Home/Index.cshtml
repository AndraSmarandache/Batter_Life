@{
    ViewData["Title"] = "BatterLife - Home";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
}

<div class="home">
    <video autoplay loop muted id="video-bg">
        <source src="~/videos/background.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="content">
        <div class="welcome-message">
            <h1>Welcome to BatterLife</h1>
            <p>Where taste meets creativity.</p>
            <a asp-controller="Products" asp-action="Index" class="order-button">Explore Now</a>
        </div>
    </div>
</div>

@section Footer {
    <footer class="home-footer">
        <p>&copy; 2025 BatterLife. All rights reserved.</p>
    </footer>
}