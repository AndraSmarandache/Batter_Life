@model BatterLife.Models.Review
@{
    ViewData["Title"] = "Delete Review";
    Layout = "_Layout";
}

<style>
    .delete-review-page {
        padding-top: 120px;
        padding-left: 20px;
        padding-right: 20px;
        color: white;
        background-color: #1a1a1a;
        min-height: 100vh;
        font-size: 1.1rem;
    }

    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background-color: #333;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    }

    .delete-header {
        margin-bottom: 30px;
        text-align: center;
        border-bottom: 1px solid #444;
        padding-bottom: 20px;
    }

        .delete-header h1 {
            font-size: 2.2rem;
            margin-bottom: 10px;
            color: #ff6f61;
        }

        .delete-header h4 {
            color: #ccc;
            font-weight: normal;
        }

    .confirmation-message {
        color: #ff6f61;
        margin-bottom: 25px;
        text-align: center;
        font-size: 1.2rem;
    }

    .review-details {
        margin-bottom: 30px;
    }

    .detail-row {
        display: flex;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #444;
    }

    .detail-label {
        font-weight: 600;
        width: 150px;
        color: #ccc;
    }

    .detail-value {
        flex: 1;
        color: white;
    }

    .rating-stars {
        color: gold;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-delete {
        background-color: #ff6f61;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #e65a50;
            transform: translateY(-2px);
        }

    .btn-cancel {
        background-color: #444;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: #555;
            transform: translateY(-2px);
        }
</style>

<div class="delete-review-page">
    <div class="delete-container">
        <div class="delete-header">
            <h1>Delete Review</h1>
            <h4>Are you sure you want to delete this?</h4>
        </div>

        <div class="confirmation-message">
            This action cannot be undone.
        </div>

        <div class="review-details">
            <div class="detail-row">
                <div class="detail-label">User Name</div>
                <div class="detail-value">@Html.DisplayFor(model => model.UserName)</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Product</div>
                <div class="detail-value">@(Model.Product?.Name ?? "N/A")</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Comment</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Comment)</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Rating</div>
                <div class="detail-value">
                    <span class="rating-stars">
                        @for (int i = 0; i < Model.Rating; i++)
                        {
                            <span>★</span>
                        }
                        @for (int i = Model.Rating; i < 5; i++)
                        {
                            <span>☆</span>
                        }
                    </span>
                    (@Model.Rating/5)
                </div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Date Created</div>
                <div class="detail-value">@Model.CreatedAt.ToString("g")</div>
            </div>
        </div>

        <form asp-action="Delete" class="action-buttons">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn-delete" />
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </form>
    </div>
</div>