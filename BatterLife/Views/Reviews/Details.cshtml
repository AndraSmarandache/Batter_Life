@model BatterLife.Models.Review
@{
    ViewData["Title"] = "Review Details";
    Layout = "_Layout";
}

<style>
    .details-review-page {
        padding-top: 120px;
        padding-left: 20px;
        padding-right: 20px;
        color: white;
        background-color: #1a1a1a;
        min-height: 100vh;
        font-size: 1.1rem;
    }

    .details-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 30px;
        background-color: #333;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    }

    .details-header {
        margin-bottom: 30px;
        text-align: center;
        border-bottom: 1px solid #444;
        padding-bottom: 20px;
    }

        .details-header h1 {
            font-size: 2.2rem;
            margin-bottom: 10px;
            color: #ff6f61;
        }

    .review-details {
        margin-bottom: 30px;
    }

    .detail-row {
        display: flex;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #444;
    }

    .detail-label {
        font-weight: 600;
        width: 200px;
        color: #ccc;
    }

    .detail-value {
        flex: 1;
        color: white;
    }

    .rating-stars {
        color: gold;
    }

    .comment-value {
        white-space: pre-wrap;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-action {
        padding: 12px 24px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
    }

    .btn-edit {
        background-color: #ff6f61;
        color: white;
        border: none;
    }

        .btn-edit:hover {
            background-color: #e65a50;
            transform: translateY(-2px);
        }

    .btn-back {
        background-color: #444;
        color: white;
        border: none;
    }

        .btn-back:hover {
            background-color: #555;
            transform: translateY(-2px);
        }
</style>

<div class="details-review-page">
    <div class="details-container">
        <div class="details-header">
            <h1>Review Details</h1>
        </div>

        <div class="review-details">
            <div class="detail-row">
                <div class="detail-label">User Name</div>
                <div class="detail-value">@Html.DisplayFor(model => model.UserName)</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Product</div>
                <div class="detail-value">@(Model.Product?.Name ?? "N/A")</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Rating</div>
                <div class="detail-value">
                    <span class="rating-stars">
                        @for (int i = 0; i < Model.Rating; i++)
                        {
                            <span>★</span>
                        }
                        @for (int i = Model.Rating; i < 5; i++)
                        {
                            <span>☆</span>
                        }
                    </span>
                    (@Model.Rating/5)
                </div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Comment</div>
                <div class="detail-value comment-value">@Html.DisplayFor(model => model.Comment)</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Date Created</div>
                <div class="detail-value">@Model.CreatedAt.ToString("g")</div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-action btn-edit">Edit</a>
            <a asp-action="Index" class="btn-action btn-back">Back to List</a>
        </div>
    </div>
</div>