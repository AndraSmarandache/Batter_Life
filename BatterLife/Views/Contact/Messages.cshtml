@model IEnumerable<BatterLife.Models.ContactModel>
@{
    ViewData["Title"] = "Contact Messages";
    Layout = "_Layout"; 
}

<style>
    .contact-messages-page {
        padding-top: 120px;
        padding-left: 20px;
        padding-right: 20px;
        color: white;
        background-color: #1a1a1a;
        min-height: 100vh;
        font-size: 1.1rem;
    }

    .messages-container {
        max-width: 1200px;
        margin: 0 auto;
        padding-bottom: 40px;
    }

    .page-header {
        margin-bottom: 30px;
        text-align: center;
    }

        .page-header h1 {
            font-size: 2.5rem;
            color: #ff6f61;
            margin-bottom: 20px;
        }

    .messages-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #333;
        border-radius: 10px;
        overflow: hidden;
    }

        .messages-table th {
            background-color: #444;
            padding: 15px;
            text-align: left;
            color: white;
            font-weight: 600;
        }

        .messages-table td {
            padding: 15px;
            border-bottom: 1px solid #444;
            color: #ccc;
        }

        .messages-table tr:last-child td {
            border-bottom: none;
        }

        .messages-table tr:hover td {
            background-color: #3a3a3a;
        }

    .no-messages {
        margin-top: 40px;
        text-align: center;
        color: #777;
        font-size: 1.2rem;
        padding: 30px;
        background-color: #333;
        border-radius: 10px;
    }
</style>

<div class="contact-messages-page">
    <div class="messages-container">
        <div class="page-header">
            <h1>Contact Messages</h1>
        </div>

        @if (Model.Any())
        {
            <table class="messages-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Sent At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                        <tr>
                            <td>@message.Name</td>
                            <td>@message.Email</td>
                            <td>@message.Subject</td>
                            <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">@message.Message</td>
                            <td>
                                @{
                                    var localTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Europe/Bucharest");
                                    var localTime = TimeZoneInfo.ConvertTimeFromUtc(message.CreatedAt, localTimeZone);
                                    @localTime.ToString("yyyy-MM-dd HH:mm:ss")
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-messages">
                <p>No contact messages found.</p>
            </div>
        }
    </div>
</div>
</div>