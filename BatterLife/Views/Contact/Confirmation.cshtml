@{
    ViewData["Title"] = "Thank You";
}

<main class="contact-page confirmation-page">
    <h1>Thank You!</h1>
    <p>Your message has been sent successfully. We will get back to you soon.</p>
    <div class="button-container">
        <a asp-action="Index" class="btn btn-primary">Back to Contact Page</a>
    </div>
</main>

@section Styles {
    <style>
        .confirmation-page {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            justify-content: center;
            min-height: 100vh;
            color: white;
            position: relative;
            background-image: url('../images/bakery-hero.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

            .confirmation-page::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0, 0, 0, 0.6);
                z-index: 1;
            }

            .confirmation-page > * {
                position: relative;
                z-index: 2;
            }

            .confirmation-page h1 {
                font-size: 2.5rem;
                margin-bottom: 20px;
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
            }

            .confirmation-page p {
                font-size: 1.1rem;
                margin-bottom: 30px;
            }

            .confirmation-page .button-container {
                margin-top: 20px;
            }

            .confirmation-page .btn-primary {
                background-color: #ff6f61;
                color: white;
                border-color: #ff6f61;
                padding: 12px 25px;
                border-radius: 8px;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

                .confirmation-page .btn-primary:hover {
                    background-color: #e65a50;
                    border-color: #e65a50;
                }
    </style>
}